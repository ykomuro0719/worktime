<%= nested_form_for(@work) do |f| %>
   
        <%= f.label :task_id, "仕事内容" %>
        <%= f.collection_select :task_id, Task.all, :id, :tasktitle %>


        <%= f.label :child1task_id, "分類1" %>
        <%= f.collection_select :child1task_id, Child1task.all, :id, :child1title %>

        <%= f.label :child2task_id, "分類2" %>
        <%= f.collection_select :child2task_id, Child2task.all, :id, :child2title %>

        <%= f.label :request_id, "要求元" %>
        <%= f.collection_select :request_id, Request.all, :id, :requesttitle %>

        <%= f.label :work_time, "時間" %>
        <%= f.select :work_time, time_list %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.hidden_field :date, :value => @dt %>
        
   <%= f.submit %>
<% end %>
