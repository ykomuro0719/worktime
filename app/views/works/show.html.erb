<h1><%= @dt %>の工数管理</h1>

<button type="button" class="btn btn-primary">
    <%= link_to "新規入力", new_work_path(:date => @dt) %>
</button>
<div class="container">
<table class="table table-striped table-bordered">
　<div class="row"><tr>
    <div class="col-sm-6">
        <th>仕事内容</th>
    </div>
    <div class="col-sm-2">
    <th>時間</th></div>
　<div class="col-sm-1"><th></th></div>
　
　</tr></div>
　
<% @works.each do |work| %>
　<div class="row">
　<tr>
    <div class="col-sm-6"><td><%= work.task.task %></td></div>
    <div class="col-sm-2"><td><%= work.work_time %></td></div>
    
    <div class="col-sm-1"><td>
    <%= link_to "編集", edit_work_path(work), class: "btn-default" "btn-xs" %>
    <%= link_to "削除", work_path(work), method: :delete, class: "btn-danger" "btn-xs" %>
    </td>
    </div>
    <% @sum_time = @sum_time + work.work_time.to_f %>
　</tr>
　<% end %>
　<tr>
　    <div class="col-sm-6">
　    <td>合計時間</td></div>
　    <div class="col-sm-2"><td><%= @sum_time %>時間</td></div>
　    <div class="col-sm-1"><td></td></div>
　</tr>
</table></div>
<div class="col-sm-1">
<p><button type="button" class="btn btn-primary"><%= link_to 'TOP', root_path %></button></p>
</div>
<div class="col-sm-1">
<p><button type="button" class="btn btn-primary"><%= link_to "LOG OUT", destroy_user_session_path, method: :delete %></button></p>
</div>

