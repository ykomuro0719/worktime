<%= nested_form_for(@user) do |f|  %>
  
  <div class="center-block">
  <div class="col-sm-4">
  <div class="form-group">
    <%= f.label :name, "名前" ,:class => "control-label" %>
    <%= f.text_field :name, autofocus: true, :class =>"form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :email ,:class => "control-label" %>
    <%= f.email_field :email, autofocus: true, :class =>"form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :eid, "社員No" ,:class => "control-label" %>
    <%= f.text_field :eid, autofocus: true, :class =>"form-control" %>
  </div>

　<div class="form-group">
  <%= f.label :group1_id, "グループ1" ,:class => "control-label" %>
  <%= f.collection_select :group1_id, @groups.where(groupstatus: true), :id, :groupname,  { :include_blank => "選択"}, :class =>"form-control" %>
  </div>
  
  <div class="form-group">
  <%= f.label :group2_id, "グループ2" ,:class => "control-label" %>
  <%= f.collection_select :group2_id, @groups.where(groupstatus: true), :id, :groupname,  { :include_blank => "選択"}, :class =>"form-control" %>
  </div>
  
  <div class="form-group">
  <%= f.label :group3_id, "グループ3" ,:class => "control-label" %>
  <%= f.collection_select :group3_id, @groups.where(groupstatus: true), :id, :groupname,  { :include_blank => "選択"}, :class =>"form-control" %>
  </div>
　
　
　
  <div class="form-group">
    <%= f.label :password, "パスワード" ,:class => "control-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" , :class =>"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "パスワードの確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" , :class =>"form-control"%>
  </div>  
  
  <div class="form-group">
  <% if @current_user.admin %>
  <div><%= f.label :admin ,:class => "control-label" %><br />
  <%= f.check_box :admin, { }, "true", "false" %></div>
  <% end %>
<%= f.submit "送信" , :class => "form-control btn-default" %>
<% end %>
</div>
</div>